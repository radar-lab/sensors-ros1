<launch>
  <arg name="show_image_view" default="false" />
  <arg name="camera_yaml" default="$(find usb_cam)/config/usb_cam.yml" />

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(arg camera_yaml)"/>
  </node>
  <node if="$(arg show_image_view)" name="image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>